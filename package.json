    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/ramda": "0.28.15",
    "@types/react-syntax-highlighter": "15.5.5",
    "@types/sharp": "0.31.0",
    "jest-canvas-mock": "latest",
    "next-compose-plugins": "2.2.1",
    "next-pwa": "5.6.0",
