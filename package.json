{
  "name": "powerfulyang.com",
  "version": "1.0.0",
  "private": true,
  "description": "home page",
  "scripts": {
    "update:lock": "pnpm i --lockfile-only",
    "bootstrap": "pnpm install --frozen-lockfile",
    "test": "jest",
    "postinstall": "npx husky install",
    "prod:dev": "cross-env API_ENV=prod next dev",
    "qa:dev": "cross-env API_ENV=qa next dev",
    "local:dev": "cross-env API_ENV=local next dev",
    "build": "next build",
    "postbuild": "rimraf ./.next/**/*.map && next-sitemap --config ./next-sitemap.config.mjs",
    "analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "tsc-check": "tsc --noEmit",
    "precommit": "pnpm run tsc-check && lint-staged && pnpm run test",
    "prettier": "prettier \"src/**/*.{tsx,ts,scss}\" --write",
    "lint:js": "eslint ./src --ext .ts,.tsx --fix",
    "lint:style": "stylelint --fix \"src/**/*.scss\""
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/powerfulyang/powerfulyang.com"
  },
  "dependencies": {
    "@docsearch/react": "3.2.1",
    "@mojs/core": "1.3.0",
    "@monaco-editor/react": "4.4.6",
    "@powerfulyang/components": "1.6.0",
    "@powerfulyang/hooks": "1.3.0",
    "@powerfulyang/utils": "1.5.0",
    "@sentry/nextjs": "7.13.0",
    "@tanstack/react-query": "4.5.0",
    "classnames": "2.3.2",
    "dayjs": "1.11.5",
    "framer-motion": "7.3.6",
    "hast-util-to-string": "2.0.0",
    "immer": "9.0.15",
    "jotai": "1.8.4",
    "lodash-es": "4.17.21",
    "lottie-react": "2.3.1",
    "monaco-editor": "0.34.0",
    "next": "12.3.1",
    "next-sitemap": "3.1.22",
    "peerjs": "1.4.7",
    "ramda": "0.28.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.36.1",
    "react-hotkeys-hook": "3.4.7",
    "react-intersection-observer": "9.4.0",
    "react-markdown": "8.0.3",
    "react-syntax-highlighter": "15.5.0",
