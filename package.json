{
  "name": "powerfulyang.com",
  "version": "1.0.0",
  "private": true,
  "description": "home page",
  "scripts": {
    "test": "jest",
    "prepare": "npx husky install",
    "prod:dev": "cross-env API_ENV=prod next dev",
    "qa:dev": "cross-env API_ENV=qa next dev",
    "local:dev": "cross-env API_ENV=local next dev",
    "build": "next build",
    "postbuild": "rimraf ./.next/**/*.map",
    "analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "tsc": "tsc --noEmit --incremental false",
    "precommit": "npm run tsc && lint-staged && npm run test",
    "prettier": "prettier \"src/**/*.{tsx,ts,scss}\" --write",
    "lint:js": "eslint ./src --ext .ts,.tsx --fix",
    "lint:style": "stylelint --fix \"src/**/*.scss\""
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/powerfulyang/powerfulyang.com"
  },
  "dependencies": {
    "@mojs/core": "1.3.0",
    "@monaco-editor/react": "4.4.2",
    "@powerfulyang/components": "1.2.3",
    "@powerfulyang/hooks": "0.3.9",
    "@powerfulyang/utils": "1.3.12",
    "@sentry/nextjs": "6.19.6",
    "classnames": "2.3.1",
    "dayjs": "1.11.1",
    "framer-motion": "6.3.0",
    "jotai": "1.6.4",
    "monaco-editor": "0.33.0",
    "monaco-markdown": "0.0.12",
    "next": "12.1.5",
    "ramda": "0.28.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-hook-form": "7.30.0",
    "react-intersection-observer": "8.34.0",
    "react-markdown": "8.0.3",
    "react-query": "3.35.0",
    "react-syntax-highlighter": "15.5.0",
    "remark-gfm": "3.0.1",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.1.5",
    "@powerfulyang/lint": "0.7.14",
    "@sentry/cli": "2.0.2",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.1.1",
    "@types/jest": "27.4.1",
    "@types/ramda": "0.28.11",
    "@types/react": "17.0.44",
    "@types/react-dom": "17.0.15",
    "@types/react-syntax-highlighter": "13.5.2",
    "@types/sharp": "0.30.2",
    "cross-env": "7.0.3",
